@namespace FluentUI.Blazor.Community.Components
@inherits FluentComponentBase

<CascadingValue Value="this" IsFixed>
    <FluentCxSlideshow ShowControls=@ShowControlsAndIndicators
                       ShowIndicators=@ShowControlsAndIndicators
                       TItem="string"
                       AutoSize
                       Id="@Id">
        @if (Message is not null)
        {
            if (Message.MessageType.HasFlag(ChatMessageType.Text))
            {
                <SlideshowItem TItem="string">
                    <ChatMessageSlideShowItemText Owner="@Owner" Sections="@Message.Sections" />
                </SlideshowItem>
            }

            if (Message.MessageType.HasFlag(ChatMessageType.Document))
            {
                foreach (var item in Message.Files)
                {
                    <SlideshowItem TItem="string">
                        <ChatMessageSlideShowItemDocument TItem="string" LoadingLabel="@LoadingLabel" Item="@item" />
                    </SlideshowItem>
                }
            }
        }
    </FluentCxSlideshow>
</CascadingValue>

