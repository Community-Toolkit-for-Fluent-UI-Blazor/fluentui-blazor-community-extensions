@namespace FluentUI.Blazor.Community.Components
@implements IDialogContentComponent<(SignatureLabels, SignatureExportOptions)>

<FluentDialogBody>
     <FluentStack Orientation="Orientation.Vertical"
                 VerticalGap="0"
                 Style="width: 95%">
        <FluentSelect Label="@Content.Item1.ExportFormatLabel"
                      Width="200px"
                      Height="250px"
                      Items="@(Enum.GetValues<SignatureImageFormat>())"
                      OptionText="@(e => e.GetDescription())"
                      @bind-SelectedOption=Content.Item2.Format
                      Style="margin-bottom: 20px"/>

        <FluentSlider Min="1"
                      Max="100"
                      Step="1"
                      Label="@(string.Format(Content.Item1.ExportQualityLabel, Content.Item2.Quality))"
                      AriaLabel="@(string.Format(Content.Item1.ExportQualityLabel, Content.Item2.Quality))"
                      @bind-Value=Content.Item2.Quality />
     </FluentStack>
</FluentDialogBody>
