@namespace FluentUI.Blazor.Community.Components
@inherits FluentButton

@if (IsVisible)
{
    <FluentKeyCode OnKeyDown="@OnKeyDown" Anchor="@Id" />

        <FluentButton Action="@Action"
                      AdditionalAttributes="@AdditionalAttributes"
                      Appearance="@Appearance"
                      Autofocus="@Autofocus"
                      BackgroundColor="@BackgroundColor"
                      ChildContent="@ChildContent"
                      Class="@Class"
                      Color="@Color"
                      CurrentValue="@CurrentValue"
                      Data="@Data"
                      Disabled=@Disabled
                      Enctype="@Enctype"
                      FormId="@FormId"
                      IconEnd="@IconEnd"
                      IconStart="@IconStart"
                      Id="@Id"
                      Loading=@Loading
                      Method="@Method"
                      Name="@Name"
                      NoValidate="@NoValidate"
                      OnClick="@OnClick"
                      ParentReference="@ParentReference"
                      Required=@Required
                      StopPropagation=@StopPropagation
                      Style="@InternalStyle"
                      Title="@Title"
                      Type="@Type"
                      Value="@Value" />
}
