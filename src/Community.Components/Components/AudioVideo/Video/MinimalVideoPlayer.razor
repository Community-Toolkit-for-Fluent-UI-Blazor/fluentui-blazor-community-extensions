@namespace FluentUI.Blazor.Community.Components
@inherits FluentComponentBase

<div id="@Id"
     class="minimal-player @Class"
     style="@Style">
    <Video Id="@($"video-{Id}")" @ref="_videoReference" />
    <PlayOrPauseButton PlayLabel="@PlayLabel"
                       PauseLabel="@PauseLabel"
                       OnPlayChanged="@OnPlayPause"
                       Style="position: absolute;"/>
</div>
