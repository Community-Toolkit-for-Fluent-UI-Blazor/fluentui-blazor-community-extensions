    private string _sample = "<FluentCxFileManager TItem=\"NoFileEntryData\"  FileExtensionTypeLabels=\"@FileExtensionTypeLabels.French\" FileManagerLabels=\"@FileManagerLabels.French\"ColumnLabels=\"@DataGridColumnLabels.French\"DetailsLabels=\"@FileManagerDetailsLabels.French\" />";

    private string _sample2 = "<FluentCxFileManager TItem=\"NoFileEntryData\"  FileExtensionTypeLabels=\"@_fileExtensionTypeLabels\" FileManagerLabels=\"@_fileManagerLabels\"ColumnLabels=\"@_columnsLabels\"DetailsLabels=\"@_fileManagerDetailsLabels\" />";

}
