            <FluentNavLink Href="devicedetector" Icon="@(new Icons.Regular.Size20.PhoneDesktop())" IconColor="Color.Accent">Device detector</FluentNavLink>
            <FluentNavLink Href="resizers" Icon="@(new Icons.Regular.Size20.Resize())" IconColor="Color.Accent">Resizers</FluentNavLink>
            <FluentNavLink Href="tilegrid" Icon="@(new Icons.Regular.Size20.Apps())" IconColor="Color.Accent">Tile Grid</FluentNavLink>
            <FluentNavLink Href="filemanager" Icon="@(new Icons.Regular.Size20.FolderOpen())" IconColor="Color.Accent">File Manager</FluentNavLink>
            <FluentNavLink Href="imagegroup" IconColor="Color.Accent" Icon="@(new Icons.Regular.Size20.ImageMultiple())">Image group</FluentNavLink>
            <FluentNavLink Href="pathbar" IconColor="Color.Accent" Icon="@(new Icons.Regular.Size20.Navigation())">Path bar</FluentNavLink>
            <FluentNavLink Href="mediaquery" IconColor="Color.Accent" Icon="@(new Icons.Regular.Size20.PhoneDesktop())">Media queries</FluentNavLink>
            <FluentNavLink Href="cookies" IconColor="Color.Accent" Icon="@(new Icons.Regular.Size20.Cookies())">Cookies</FluentNavLink>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}
