@namespace FluentUI.Blazor.Community.Components
@inherits FluentComponentBase

@code {
    public ArtisticScatterItem()
    {
        Id = Identifier.NewId();
        _dotNetRef = DotNetObjectReference.Create(this);

        InternalRenderer = __builder =>
        {
            <img id="@Id"
                 loading="@(IsLazy ? "lazy" : "eager")"
                 fetchpriority="@(FetchPriorityHigh ? "high" : "low")"
                 class="@InternalCss"
                 style="@InternalStyle"
                 src="@Source"
                 alt="@Alt"
                 title="@Title"
                 @ref=Element />
        };
    }
}
