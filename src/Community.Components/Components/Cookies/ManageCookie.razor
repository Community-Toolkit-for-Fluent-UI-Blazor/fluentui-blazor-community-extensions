@namespace FluentUI.Blazor.Community.Components
@inherits FluentComponentBase
@implements IDialogContentComponent<CookieData>

<FluentDialogBody Style="overflow-x: auto">
    <div style="display: grid; grid-template-columns : repeat(@(Content.Items.Count()), minmax(300px, 1fr))">
        @foreach(var item in Content.Items)
        {
            <CookieItemView Item="@item"
                            AcceptLabel="@Content.Labels.Accept"
                            DeclineLabel="@Content.Labels.Decline"
                            ShowDivider="@(item.Name != Content.Items.Last().Name)"
                            OnActivationChanged="@(() => StateHasChanged())"
                            Template="@Content.ItemTemplate"/>
        }
    </div>
</FluentDialogBody>

<FluentDialogFooter>
    <FluentButton Style="min-width: 150px;"
                  Disabled="@ButtonsDisabled"
                  OnClick="@OnSaveAsync"
                  Appearance="Appearance.Accent">
        @Dialog.Instance.Parameters.PrimaryAction
    </FluentButton>

    <FluentButton Style="min-width: 150px;"
                  Disabled="@ButtonsDisabled"
                  OnClick="@OnCancelAsync">
        @Dialog.Instance.Parameters.SecondaryAction
    </FluentButton>
</FluentDialogFooter>
