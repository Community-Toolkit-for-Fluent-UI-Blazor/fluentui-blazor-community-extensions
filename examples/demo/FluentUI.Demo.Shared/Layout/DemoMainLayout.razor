@inherits LayoutComponentBase
@using System.Runtime.InteropServices

<FluentLayout>
    <FluentHeader Class="siteheader">
        FluentUI Blazor Community Extensions
        <FluentSpacer />

        <div class="links">
            <FluentAnchor Appearance="Appearance.Hypertext"
                          Href="https://github.com/Community-Toolkit-for-Fluent-UI-Blazor/fluentui-blazor-community-extensions" Target="_blank" Rel="noreferrer noopener"
                          title="Community Toolkit for Fluent UI Blazor source on GitHub" aria-label="Community Toolkit for Fluent UI Blazor source on GitHub">
                <FluentIcon Value="@(new DemoIcons.Size20.GitHub())" Color="Color.FillInverse" />
            </FluentAnchor>
        </div>

        <div class="settings">
            <SiteSettings />
        </div>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <DemoNavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div class="version">
            Version: @_version
            &nbsp;-&nbsp;
            <a href="https://dotnet.microsoft.com/en-us/learn/aspnet/what-is-aspnet-core">Powered by @RuntimeInformation.FrameworkDescription</a>
        </div>
    </FluentFooter>

    <FluentMenuProvider />
    <FluentDialogProvider />
    <FluentToastProvider />
    <FluentCxLottieProvider />
    <FluentCxObserverProvider />

    <FluentTooltipProvider />
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

