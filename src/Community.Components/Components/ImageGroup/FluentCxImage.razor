@namespace FluentUI.Blazor.Community.Components
@inherits FluentComponentBase


@if (Parent is null)
{
    <img src="@Source" alt="@Alt" style="@InternalStyle" />
}

@code {
    public FluentCxImage()
    {
        InternalRenderer = __builder =>
        {
            @if (Parent.IsInPopover(this))
            {
                <img src="@Source" alt="@Alt" style="@InternalPopoverStyle" />
            }
            else
            {
                <img src="@Source" alt="@Alt" style="@(Parent.GroupType == ImageGroupType.Spread ? InternalSpreadStyle : InternalStackStyle)" />
            }
        };
    }
}
