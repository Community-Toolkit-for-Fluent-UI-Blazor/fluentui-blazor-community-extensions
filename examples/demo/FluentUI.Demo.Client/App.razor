<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="[typeof(FluentUI.Demo.Shared._Imports).Assembly]">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(DemoMainLayout)" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(DemoMainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
