@namespace FluentUI.Blazor.Community.Components
@inherits FluentComponentBase


<svg id="@Id"
	 @ref="Element"
	 @key="@Id"
	 class="@Class"
	 style="@Style"
	 xmlns="http://www.w3.org/2000/svg"
	 width="@Size"
	 height="@Size"
	 viewBox="0 0 @Size @Size">
	<polygon points="@Center,0 @Size,@Center @Center,@Size 0,@Center"
		     fill="@Fill"
			 stroke="@Stroke"
			 stroke-width="@StrokeWidth"
			 opacity="@Opacity" />
</svg>
